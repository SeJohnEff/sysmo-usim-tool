[flake8]
# Flake8 configuration for sysmo-usim-tool GUI

# Maximum line length
max-line-length = 120

# Ignore specific error codes:
# E402 - module level import not at top of file (needed for sys.path manipulation)
# W503 - line break before binary operator (black-compatible)
ignore = E402, W503

# Exclude directories and original CLI tool files
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    tests,
    pySim,
    card,
    # Original CLI tool files (skip linting for now)
    sysmo_isim_sja2.py,
    sysmo_usim_sjs1.py,
    sysmo-usim-tool.sjs1.py,
    sysmo_usim.py,
    simcard.py,
    common.py,
    utils.py,
    card_config.py

# Per-file ignores
per-file-ignores =
    __init__.py:F401
